<link rel="stylesheet" href="/styles/form.css" />
<script type="module" src="/scripts/form.js"></script>
<div class="container">
  <div class="left"></div>
  <div class="right">
    <h2>Become a <span>Member</span></h2>
    <form action="/signup" method="POST" id="create">
      <label for="firstName">First Name</label>
      <input
        type="text"
        id="firstName"
        name="firstName"
        placeholder=" "
        required
      /><br />
      <label for="lastName">Last Name</label>
      <input
        type="text"
        id="lastName"
        name="lastName"
        placeholder=" "
        required
      /><br />
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder=" "
        required
      /><br />
      <label id="pw-label" for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        placeholder=" "
        minlength="6"
        required
      />
      <label id="error-message"></label>
      <button id="submit-button" type="button">Sign Up</button>
      <p>Already a member? <a href="/login">Log In</a></p>
    </form>
  </div>
</div>
<a class="back" href="/">Go Back</a>
